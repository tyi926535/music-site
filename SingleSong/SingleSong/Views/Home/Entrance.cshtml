
@{
    ViewData["Title"] = "Entrance";
}

<div id="entrance" class="entrance" style="width: 50%;margin-top: 150px;margin-left: 27%;">
    <h2 style="text-align:center;margin-bottom: 40px;">Вход</h2>
    
    <input name="emailT" placeholder="Email..." type="email" style="margin-left: 15%;width: 50%;height: 30px;border: none;resize: none;font-size: 1.2em; background: #fff;color: #000000;font-family: 'Times New Roman';padding: 10px;padding-left: 10px;border-radius: 10px 10px 10px 10px;">
    <br>
    <input name="passwordT" placeholder="Пароль..." type="password" style="margin-left: 15%;width: 50%;height: 30px;margin-top: 20px;margin-bottom: 20px;border: none;resize: none;font-size: 1.2em; background: #fff;color: #000000;font-family: 'Times New Roman';padding: 10px;padding-left: 10px;border-radius: 10px 10px 10px 10px;">
    <br>
    <a asp-area="" asp-controller="Home" asp-action="CardPeople" style="text-decoration: none;color: #ffffff;">
        <button style="float:left;margin-left: 20%;width: 100px; height: 35px;border-radius: 60px;background: #ffffff;color: #000000;margin-top: 10px;">Войти</button>
    </a>
    <a asp-area="" asp-controller="Home" asp-action="Registration" style="text-decoration: none;color: #ffffff;">
        <button style="float:right;margin-right: 35%;width: 150px; height: 35px;border-radius: 60px;background: #ffffff;color: #000000;margin-top: 10px;">Зарегистрироваться</button>
    </a>

</div>


