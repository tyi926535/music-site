@model SingleSong.Data.BD3
@{
    ViewData["Title"] = "Registration";
}
 
<div style="width: 50%;margin-top: 150px;margin-left: 27%;">
    <h2 style="text-align:center;margin-bottom: 40px;">Регистрация</h2>
    <form asp-controller="PersonalAccount" asp-action="Registration" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"  style="margin-left: 15%;width: 70%;margin-top: 5px;font-style:italic;color:red;font-size: 1.2em;">
        </div>
        <div >
            <input asp-for="Name" required placeholder="Name..." type="text" style="margin-left: 15%;width: 50%;height: 30px;border: none;font-size: 1.2em; background: #fff;color: #000000;font-family: 'Times New Roman';padding: 10px;padding-left: 10px;border-radius: 10px 10px 10px 10px;">
    <br>
            <input asp-for="Mail" required placeholder="Email..." type="email" style="margin-left: 15%;width: 50%;height: 30px;margin-top: 20px;border: none;resize: none;font-size: 1.2em; background: #fff;color: #000000;font-family: 'Times New Roman';padding: 10px;padding-left: 10px;border-radius: 10px 10px 10px 10px;">
    <br>
            <input asp-for="Password" required placeholder="Пароль..." type="password" style="margin-left: 15%;width: 50%;height: 30px;margin-top: 20px;margin-bottom: 20px;border: none;resize: none;font-size: 1.2em; background: #fff;color: #000000;font-family: 'Times New Roman';padding: 10px;padding-left: 10px;border-radius: 10px 10px 10px 10px;">
    <br>
        <p>
                <input type="file" required name="fileImg" accept=".jpg" style="margin-left: 18%;height: 30px; ">
            </p>
        </div>
            <br>
        <input type="submit" value="Зарегистрироваться" style="margin-left: 50%;margin-top: 20px;float: left;width: 150px; height: 35px;border-radius: 60px;background: #ffffff;color: #000000;" />
        
    </form>



</div>

